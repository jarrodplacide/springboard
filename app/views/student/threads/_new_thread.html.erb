<%= form_for thread, url: student_subject_section_discussion_topic_threads_path(subject, section, board, topic) do |f| %>
    <%= f.label :title, "Thread Title" %>
    <%= f.text_field :title, class: 'form-control' %>
    <br/>
    <%= f.submit "Create Thread", class: 'btn btn-default btn-large' %>
<% end %>