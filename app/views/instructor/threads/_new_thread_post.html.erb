<%= form_for post, url: instructor_section_discussion_topic_thread_thread_posts_path(section, board, topic, thread) do |f| %>
    <%= f.label :content, "Type post here:" %>
    <%= f.text_area :content, class: 'tinymce' %>

    <br/><br/>

    <%= f.submit 'Submit Post', class: 'btn btn-large btn-default' %>
<% end %>