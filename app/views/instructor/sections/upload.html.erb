<%
   @pagetitle = "#{@section.subject.name} - #{@section.codename}: Upload Content"
   @page_class = 'instructor-portal section_page'
%>

<h1 class="text-center"><%= @section.subject.name %> - <%= @section.codename %>: Upload Content</h1>

<%= render partial: 'layouts/messages' %>

<div class='row'>
  <div class='col-xs-3 col-sm-3 col-md-3 fixed'>
    <div class='btn-group-vertical' role='group' aria-label='side-menu'>
      <%= link_to 'View Schedule', instructor_section_classes_path(@section), class: 'btn btn-primary' %>
      <%= link_to 'View Student Roster', instructor_section_students_path(@section), class: 'btn btn-primary' %>
      <%= link_to 'Discussion Board', instructor_section_discussions_path(@section), class: 'btn btn-primary' %>
      <%= link_to 'Uploading File', '#', class: 'btn btn-primary active' %>
    </div>
  </div>
  <div class="col-xs-9 col-sm-9 col-md-9 scrollable">
    <%= form_for @upload, url: send_file_instructor_section_path(@section), method: :post do |f| %>
        <div class="form-group">
          <%= f.label :title, 'Content Title' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :file, "File" %>
          <%= f.file_field :file, class: 'form-control' %>
        </div>

        <%= f.submit "Upload", class: 'btn btn-primary btn-large' %>
    <% end %>
  </div>
  <div class='clearfix'></div>
</div>
