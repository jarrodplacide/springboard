<%
	@pagetitle = "Send E-Mail to #{@student.name}"
	@page_class = 'students email'
%>

<!-- Add TinyMCE Assets -->
<%= tinymce_assets %>

<%= render partial: 'layouts/messages'  %>

<div class='row'>
	<div class='col-xs-3 col-sm-3 col-md-3 fixed'>
	    <div class='btn-group-vertical' role='group' aria-label='side-menu'>
	      <%= link_to 'Back to Student Roster', instructor_section_students_path(@section), class: 'btn btn-default' %>
	    </div>
	</div>
	<div class='col-xs-9 col-sm-9 col-md-9 scrollable'>
        <h2>Send E-Mail to Student: <i><%= @student.name %></i></h2>
		<div class='well well-lg'>
			<%= form_for @email, url: sendemail_instructor_section_student_path(@section, @student), method: :post do |f| %>
				<div class='form-group'>
					<%= f.label :subject, "Subject" %>
					<%= f.text_field :subject, class: 'form-control' %>
				</div>
				<div class='form-group'>
					<%= f.label :message, "Type E-Mail here:" %>
					<%= f.text_area :message, class: 'tinymce' %>
				</div>

				<%= f.submit "Send E-Mail", class: 'btn btn-default' %>
			<% end %>
		</div>
	</div>
</div>

<!-- Initialize TinyMCE -->
<%= tinymce %>