<%
	@pagetitle = "Student Profile - #{@student.name}"
	@page_class = 'instructor-portal sudent-profile'
%>

<%= render partial: 'layouts/messages' %>

<div class="row">
	<div class="col-xs-3 col-sm-3 col-md-3 fixed">
		<div class='btn-group-vertical' role='group' aria-label='side-menu'>
	      <%= link_to 'Back to Student Roster', instructor_section_students_path(@section), class: 'btn btn-default' %>
	      <%= link_to 'Viewing Student Profile', '#', class: 'btn btn-primary active' %>
	    </div>
	</div>
	<div class='col-xs-9 col-sm-9 col-md-9 scrollable'>		
		<div class='well well-lg'>
			<div class='row'>
				<div class='col-sm-2'><strong>First Name:</strong></div>
				<div class='col-sm-10'><%= @student.first_name %></div>
				<% unless @student.middle_initial.nil? or @student.middle_initial.blank? %>
				<div class='col-sm-2'><strong>Middle Initial:</strong></div>
				<div class='col-sm-10'><%= @student.middle_initial %></div>
				<% end %>
				<div class='col-sm-2'><strong>Last Name:</strong></div>
				<div class='col-sm-10'><%= @student.last_name %></div>
				<br/><br/>
				<div class='col-sm-2'><strong>Age:</strong></div>
				<div class='col-sm-10'><%= age(@student.dob) %></div>
				<div class='col-sm-2'><strong>Gender:</strong></div>
				<div class='col-sm-10'><%= @student.gender %></div>
				<br/><br/>
				<div class='col-sm-2'><strong>School:</strong></div>
				<div class='col-sm-10'><%= @student.school.name %></div>
			</div>
		</div>
	</div>
</div>