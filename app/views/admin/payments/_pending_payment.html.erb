<tr>
  <td><%= pending_payment.created_at.strftime('%v') %></td>
  <td><%= pending_payment.student.name %></td>
  <td><%= pending_payment.subscription.subject.name %></td>
  <td>
    <div class="btn-group">
      <%= link_to "Cancel Payment Request", admin_cancel_offline_payment_path(pending_payment), method: :post, class: 'btn btn-primary btn-sm', data: {confirm: 'Are you sure you want to cancel this payment request?'} %>
      <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "Enter Verified Payment Information", admin_offline_payment_info_path(pending_payment) %></li>
      </ul>
    </div>
  </td>
</tr>