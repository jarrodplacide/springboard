<h1 class='text-center'>Edit Subject: <%= @subject.name %></h1>
<%= form_for [:admin, @subject], html: {class: 'single-column-form center-block'} do |f| %>
    <%= f.label :name, 'Subject Name' %>
    <%= f.text_field :name, class: 'form-control' %>

    <div class="checkbox">
      <%= f.check_box :available %> Available to Registered Users?
    </div>
    <br/>

    <%= f.submit "Save Changes", class: 'btn btn-large btn-primary' %>
<% end %>