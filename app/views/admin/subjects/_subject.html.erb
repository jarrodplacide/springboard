<% if subject.available
     available = 'Yes'
   else
     available = 'No'
   end
%>
<tr>
  <td><%= subject.name %></td>
  <td><%= available %></td>
  <td><%= link_to 'Edit', edit_admin_subject_path(subject), class: 'btn btn-large btn-primary' %></td>
  <td><%= link_to 'Delete', admin_subject_path(subject), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
  <td>
    <div class='btn-group'>
      <button type='button' class='btn btn-primary dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
        Sections <span class='caret'></span>
      </button>
      <ul class='dropdown-menu'>
        <li><%= link_to 'View Sections', admin_subject_sections_path(subject) %></li>
        <li><%= link_to 'Add Section', new_admin_subject_section_path(subject) %></li>
      </ul>
    </div>
  </td>
</tr>