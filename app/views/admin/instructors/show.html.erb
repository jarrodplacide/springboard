<h1 class="text-center">Instructor: <%= @instructor.name %></h1>
<h2><u>Personal Information</u></h2>
<div class="row">
  <div class="col-sm-2">
    <p><strong>First Name: </strong></p>
    <p><strong>Middle Initial: </strong></p>
    <p><strong>Last Name: </strong></p>
    <p><strong>Contact Number: </strong></p>
    <p><strong>E-Mail Address: </strong></p>
  </div>
  <div class="col-sm-10">
    <p><%= @instructor.first_name %></p>
    <p><%= @instructor.middle_initial %></p>
    <p><%= @instructor.last_name %></p>
    <p><%= @instructor.contact_no %></p>
    <p><%= @instructor.email %></p>
  </div>
  <div class="clearfix"></div>
</div>
<%= link_to "Edit Instructor Data", edit_admin_instructor_path(@instructor), class: 'btn btn-primary btn-large' %>
<%= link_to "Delete Instructor", admin_instructor_path(@instructor), method: :delete, data: {confirm: 'Are you sure? This will delete the instructor account as well.'}, class: 'btn btn-danger btn-large' %>
<%= link_to 'Send E-Mail', '#', class: 'btn btn-primary btn-large' %>

<h2>Assigned Sections</h2>
<table class="table table-striped">
  <thead>
  <th>Section Name</th>
  <th>Open?</th>
  <th>Start Date</th>
  <th>End Date</th>
  </thead>
  <tbody>
    <%= render partial: 'admin/instructors/section', collection: @instructor.sections.newest %>
  </tbody>
</table>